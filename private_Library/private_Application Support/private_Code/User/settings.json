{
  "terminal.integrated.scrollback": 5000,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.git": false,
    "**/.git/[^c]*": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/[Dd]esktop.ini": true,
    "**/Thumbs.db": true,
    "**/__pycache__": true
  },
  "files.associations": {
    "*.sh.tmpl": "shellscript",
    "*.yaml.tmpl": "yaml",
    "*.json.tmpl": "json",
    "*.mdc": "markdown"
  },
  "search.showLineNumbers": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/tmp": true,
    "**/bak": true,
    "**/trash": true,
    "**/certs": true,
    "**/.git": true,
    "**/.gitignore": true
  },
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.confirmOnExit": "always",
  "zenMode.centerLayout": false,
  "zenMode.hideLineNumbers": false,
  "debug.inlineValues": "on",
  "debug.openDebug": "openOnSessionStart",
  "debug.internalConsoleOptions": "openOnSessionStart",
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?　〜！％＆（）＝＋｜／；：、。「」【】『』・？",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "boundary",
  "editor.showFoldingControls": "always",
  "editor.dragAndDrop": false,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.minimap.showSlider": "always",
  "editor.minimap.size": "fit",
  "editor.tabSize": 2,
  "editor.rulers": [88, 150],
  "explorer.confirmDragAndDrop": false,
  "explorer.incrementalNaming": "smart",
  "workbench.startupEditor": "readme",
  "workbench.editor.tabSizing": "shrink",
  "workbench.iconTheme": "vscode-icons",
  "workbench.editorAssociations": {
    "*.drawio.png": "hediet.vscode-drawio",
    "*.drawio.svg": "hediet.vscode-drawio",
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.localHistory.enabled": false,
  "workbench.localHistory.maxFileSize": 256,
  "workbench.localHistory.maxFileEntries": 5,
  "workbench.commandPalette.history": 10,
  "workbench.panel.showLabels": false,
  "workbench.activityBar.location": "top",
  // language mode
  "[python]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.organizeImports.ruff": "always",
      "source.fixAll.ruff": "always"
    }
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[csv]": {
    "editor.wordWrap": "off"
  },
  "[log]": {
    "editor.wordWrap": "off"
  },
  "[markdown]": {
    "editor.tabSize": 4
  },
  "[yaml]": {
    "editor.detectIndentation": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "full"
  },
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.tabSize": 2
  },
  // vscode-icons
  "vsicons.dontShowNewVersionMessage": true,
  // Git
  "git.autofetch": true,
  "git.pruneOnFetch": true,
  "git.showPushSuccessNotification": true,
  "git.alwaysShowStagedChangesResourceGroup": true,
  "git.openRepositoryInParentFolders": "never",
  "git-graph.dialog.fetchRemote.prune": true,
  "git-graph.repository.fetchAndPrune": true,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
  "gitlens.statusBar.enabled": false,
  "gitlens.graph.minimap.enabled": false,
  "gitlens.views.commitDetails.files.layout": "list",
  "gitlens.views.scm.grouped.views": {
    "commits": false,
    "branches": false,
    "remotes": false,
    "stashes": false,
    "tags": false,
    "worktrees": false,
    "contributors": true,
    "repositories": false,
    "searchAndCompare": false,
    "launchpad": false
  },
  // GitHub
  "githubPullRequests.fileListLayout": "flat",
  "githubPullRequests.pullBranch": "never",
  "githubPullRequests.createOnPublishBranch": "ask",
  // JavaScript
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  // Dart
  "dart.flutterSdkPath": "/usr/local/lib/flutter",
  "dart.openDevTools": "flutter",
  "[dart]": {
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off"
  },
  // REST Client
  "rest-client.decodeEscapedUnicodeCharacters": true,
  "rest-client.environmentVariables": {
    "$shared": {}
  },
  // Todo Tree
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]",
    "NOTE",
    "WARNING",
    "REVIEW",
    "MEMO"
  ],
  // Drawio
  // "hediet.vscode-drawio.local-storage": "",
  "hediet.vscode-drawio.theme": "min",
  "hediet.vscode-drawio.codeLinkActivated": false,
  // PlantUML
  "plantuml.render": "Local",
  "plantuml.exportFormat": "png",
  "plantuml.previewAutoUpdate": false,
  // Markdown
  // "markdown-pdf.breaks": true,
  // "markdown-pdf.orientation": "landscape",
  // "markdown-preview-enhanced.scrollSync": false,
  "markdown-preview-enhanced.plantumlJarPath": "/opt/homebrew/Cellar/plantuml/1.2025.3/libexec/plantuml.jar",
  "markdown.updateLinksOnFileMove.enabled": "prompt",
  "markdown.preview.lineHeight": 2,
  "markdown.preview.doubleClickToSwitchToEditor": false,
  "markdown.extension.tableFormatter.enabled": false,
  // YAML
  "redhat.telemetry.enabled": false,
  "yaml.customTags": [
    "!And",
    "!And sequence",
    "!If",
    "!If sequence",
    "!Not",
    "!Not sequence",
    "!Equals",
    "!Equals sequence",
    "!Or",
    "!Or sequence",
    "!FindInMap",
    "!FindInMap sequence",
    "!Base64",
    "!Join",
    "!Join sequence",
    "!Cidr",
    "!Ref",
    "!Sub",
    "!Sub sequence",
    "!GetAtt",
    "!GetAZs",
    "!ImportValue",
    "!ImportValue sequence",
    "!Select",
    "!Select sequence",
    "!Split",
    "!Split sequence"
  ],
  // SQL Server
  "mssql.connections": [
    {
      "server": "{{put-server-name-here}}",
      "database": "{{put-database-name-here}}",
      "user": "{{put-username-here}}",
      "password": ""
    }
  ],
  "errorLens.delay": 1000,
  "errorLens.gutterIconsEnabled": true,
  "yaml.schemas": {
    "file:///Users/hayakawa/.vscode/extensions/atlassian.atlascode-3.0.9/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
  },
  "html.format.enable": false,
  "liveServer.settings.root": "/dist",
  "todo-tree.tree.buttons.scanMode": true,
  "todo-tree.general.statusBar": "current file",
  "todo-tree.filtering.includeGlobs": [
    "**/*.pu",
    "**/*.tf",
    "**/*.md",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    "**/*.py"
  ],
  "excalidraw.theme": "light",
  // AI
  "amazonQ.ignoredSecurityIssues": ["certs", ".env", ".git"],
  "geminicodeassist.project": "silent-glow-403014",
  "roo-cline.allowedCommands": [
    "npm test",
    "npm install",
    "tsc",
    "git log",
    "git diff",
    "git show"
  ],
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "gitignore": false,
    "pip-requirements": false,
    "toml": false,
    "jsonc": false,
    "properties": false,
    "shellscript": false,
    "yaml": false,
    "python": false,
    "ini": false,
    "ignore": false,
    "json": false,
    "git-commit": false,
    "git-rebase": false,
    "pascal": false,
    "scss": false,
    "sass": false,
    "xml": false,
    "javascript": false,
    "javascriptreact": false,
    "dockerfile": false,
    "css": false,
    "dockercompose": false,
    "plantuml": false,
    "csv": false,
    "tsv": true,
    "http": false
  },
  "chat.mcp.discovery.enabled": {
    "claude-desktop": false,
    "windsurf": false,
    "cursor-global": true,
    "cursor-workspace": true
  },
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.reviewSelection.instructions": [],
  "github.copilot.chat.search.keywordSuggestions": true,
  "githubPullRequests.experimental.useQuickChat": true,
  "githubPullRequests.experimental.notificationsView": true,
  "chat.mcp.serverSampling": {
    "Cursor (Global): Notion": {
      "allowedModels": ["github.copilot-chat/gpt-4.1"]
    }
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "workbench.editor.empty.hint": "hidden",
  "inlineChat.enableV2": true,
}
