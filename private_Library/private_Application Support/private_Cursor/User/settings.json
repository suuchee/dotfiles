{
  // ============================================================
  // Language-specific Settings
  // ============================================================
  "[csv]": {
    "editor.wordWrap": "off"
  },
  "[dart]": {
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off"
  },
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[log]": {
    "editor.wordWrap": "off"
  },
  "[markdown]": {
    "editor.tabSize": 4
  },
  "[python]": {
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.tabSize": 4
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.tabSize": 2
  },
  "[yaml]": {
    "editor.autoIndent": "full",
    "editor.detectIndentation": true,
    "editor.tabSize": 2
  },
  "[vb]": {
    "files.encoding": "shiftjis"
  },
  "[vba]": {
    "files.encoding": "shiftjis"
  },
  // ============================================================
  // Editor Settings
  // ============================================================
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.copyWithSyntaxHighlighting": false,
  "editor.dragAndDrop": false,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.formatOnType": false,
  "editor.guides.bracketPairs": true,
  "editor.minimap.enabled": true,
  "editor.minimap.showSlider": "always",
  "editor.minimap.size": "fit",
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [
    88,
    150
  ],
  "editor.showFoldingControls": "always",
  "editor.tabSize": 2,
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?　〜！％＆（）＝＋｜／；：、。「」【】『』・？",
  "editor.wordWrap": "off",
  "editor.linkedEditing": true,
  "editor.stickyScroll.enabled": true,
  "editor.inlayHints.enabled": "onUnlessPressed",
  "editor.unicodeHighlight.ambiguousCharacters": true,
  "diffEditor.ignoreTrimWhitespace": false,
  // ============================================================
  // File Settings
  // ============================================================
  "files.associations": {
    "**/*.json.tmpl": "json",
    "**/*.mdc": "markdown",
    "**/*.sh.tmpl": "shellscript",
    "**/*.yaml.tmpl": "yaml",
    "**/.env*": "ini",
    "**/*.tfvars.example": "terraform-vars",
    "**/*.tfstate*": "json"
  },
  "files.eol": "\n",
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": false,
    "**/.git/[^c]*": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/Thumbs.db": true,
    "**/[Dd]esktop.ini": true,
    "**/__pycache__": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  // ============================================================
  // Search Settings
  // ============================================================
  "search.exclude": {
    "**/*.code-search": true,
    "**/.git": true,
    "**/.gitignore": true,
    "**/bower_components": true,
    "**/certs": true,
    "**/node_modules": true,
    "**/bak": true,
    "**/tmp": true,
    "**/trash": true
  },
  "search.showLineNumbers": true,
  // ============================================================
  // Explorer Settings
  // ============================================================
  "explorer.confirmDragAndDrop": false,
  "explorer.incrementalNaming": "smart",
  "explorer.autoReveal": true,
  // ============================================================
  // Workbench Settings
  // ============================================================
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.commandPalette.history": 10,
  "workbench.editor.tabSizing": "shrink",
  "workbench.editorAssociations": {
    "*.drawio.png": "hediet.vscode-drawio",
    // "*.svg": "hediet.vscode-drawio",
    "*.ipynb": "jupyter-notebook",
  },
  "workbench.iconTheme": "vscode-icons",
  "workbench.localHistory.enabled": false,
  "workbench.localHistory.maxFileEntries": 5,
  "workbench.localHistory.maxFileSize": 256,
  "workbench.startupEditor": "readme",
  "workbench.tree.indent": 16,
  "workbench.activityBar.location": "top",
  "workbench.editor.empty.hint": "hidden",
  "workbench.panel.showLabels": false,
  "window.commandCenter": true,
  "zenMode.centerLayout": false,
  "zenMode.hideLineNumbers": false,
  // ============================================================
  // Terminal Settings
  // ============================================================
  "terminal.integrated.confirmOnExit": "always",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.scrollback": 5000,
  "terminal.integrated.shellIntegration.enabled": true,
  // ============================================================
  // Debug Settings
  // ============================================================
  "debug.inlineValues": "on",
  "debug.internalConsoleOptions": "openOnSessionStart",
  "debug.openDebug": "openOnSessionStart",
  // ============================================================
  // Git Settings
  // ============================================================
  "git.alwaysShowStagedChangesResourceGroup": true,
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "never",
  "git.path": "/opt/homebrew/bin/git",
  "git.pruneOnFetch": true,
  "git.showPushSuccessNotification": true,
  "git-graph.dialog.fetchRemote.prune": true,
  "git-graph.repository.fetchAndPrune": true,
  // ============================================================
  // GitLens Settings
  // ============================================================
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.graph.minimap.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.statusBar.enabled": false,
  "gitlens.views.commitDetails.files.layout": "list",
  "gitlens.views.scm.grouped.views": {
    "branches": false,
    "commits": false,
    "contributors": true,
    "launchpad": false,
    "remotes": false,
    "repositories": false,
    "searchAndCompare": false,
    "stashes": false,
    "tags": false,
    "worktrees": false
  },
  // ============================================================
  // GitHub Settings
  // ============================================================
  "githubPullRequests.createOnPublishBranch": "ask",
  "githubPullRequests.fileListLayout": "flat",
  "githubPullRequests.pullBranch": "never",
  // ============================================================
  // Markdown Settings
  // ============================================================
  "markdown.preview.doubleClickToSwitchToEditor": false,
  "markdown.preview.lineHeight": 2,
  "markdown.updateLinksOnFileMove.enabled": "prompt",
  "markdown-preview-enhanced.enablePreviewZenMode": false,
  "markdown-pdf.breaks": true,
  "markdown-pdf.orientation": "landscape",
  "markdown-preview-github-styles.colorTheme": "light",
  "markdown-preview-enhanced.plantumlJarPath": "/opt/homebrew/bin/plantuml",
  "markdownlint.config": {
    "default": true,
    // 表の見た目を lint しない
    "MD055": false,
    // パイプ位置の強制をしない（整形競合回避）
    "MD056": false
  },
  "markdownlint.run": "onSave",
  "markdown.extension.tableFormatter.enabled": false,
  // ============================================================
  // YAML Settings
  // ============================================================
  "yaml.customTags": [
    "!And",
    "!And sequence",
    "!If",
    "!If sequence",
    "!Not",
    "!Not sequence",
    "!Equals",
    "!Equals sequence",
    "!Or",
    "!Or sequence",
    "!FindInMap",
    "!FindInMap sequence",
    "!Base64",
    "!Join",
    "!Join sequence",
    "!Cidr",
    "!Ref",
    "!Sub",
    "!Sub sequence",
    "!GetAtt",
    "!GetAZs",
    "!ImportValue",
    "!ImportValue sequence",
    "!Select",
    "!Select sequence",
    "!Split",
    "!Split sequence"
  ],
  "yaml.format.enable": false,
  "yaml.format.singleQuote": true,
  "yaml.schemas": {
    "https://api.bitbucket.org/schemas/pipelines-configuration": "bitbucket-pipelines.yml",
    "https://docs.renovatebot.com/renovate-schema.json": [
      "renovate.json",
      ".renovaterc",
      ".renovaterc.json"
    ]
  },
  // ============================================================
  // HTML Settings
  // ============================================================
  "html.format.enable": false,
  // ============================================================
  // Python Settings
  // ============================================================
  "python.defaultInterpreterPath": ".venv/bin/python",
  "python.terminal.activateEnvironment": true,
  // ============================================================
  // Dart/Flutter Settings
  // ============================================================
  "dart.flutterSdkPath": "/usr/local/lib/flutter",
  "dart.openDevTools": "flutter",
  // ============================================================
  // ESLint Settings
  // ============================================================
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  // ============================================================
  // PlantUML Settings
  // ============================================================
  "plantuml.exportFormat": "png",
  "plantuml.previewAutoUpdate": false,
  "plantuml.render": "Local",
  "plantuml.exportOutDir": ".",
  "plantuml.exportSubFolder": false,
  "plantuml.jar": "/opt/homebrew/Cellar/plantuml/1.2025.10/libexec/plantuml.jar",
  // ============================================================
  // Draw.io Settings
  // ============================================================
  "hediet.vscode-drawio.codeLinkActivated": false,
  "hediet.vscode-drawio.resizeImages": null,
  "hediet.vscode-drawio.theme": "min",
  // ============================================================
  // Excalidraw Settings
  // ============================================================
  "excalidraw.theme": "light",
  // ============================================================
  // TODO Tree Settings
  // ============================================================
  "todo-tree.filtering.includeGlobs": [
    "**/*.pu",
    "**/*.tf",
    "**/*.md",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    "**/*.py"
  ],
  "todo-tree.general.statusBar": "current file",
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]",
    "NOTE",
    "WARNING",
    "REVIEW",
    "MEMO"
  ],
  "todo-tree.tree.buttons.scanMode": true,
  // ============================================================
  // Error Lens Settings
  // ============================================================
  "errorLens.delay": 1000,
  "errorLens.gutterIconsEnabled": true,
  // ============================================================
  // Code Metrics Settings
  // ============================================================
  "codemetrics.nodeconfiguration.CaseClause": 0,
  "codemetrics.nodeconfiguration.DefaultClause": 0,
  "codemetrics.nodeconfiguration.ReturnStatement": 0,
  // ============================================================
  // REST Client Settings
  // ============================================================
  "rest-client.decodeEscapedUnicodeCharacters": true,
  "rest-client.environmentVariables": {
    "$shared": {},
  },
  // ============================================================
  // Live Server Settings
  // ============================================================
  "liveServer.settings.root": "/dist",
  // ============================================================
  // Swagger Viewer Settings
  // ============================================================
  "swaggerViewer.previewInBrowser": true,
  // ============================================================
  // ShellCheck Settings
  // ============================================================
  "shellcheck.ignorePatterns": {
    "**/*.csh": true,
    "**/*.cshrc": true,
    "**/*.fish": true,
    "**/*.login": true,
    "**/*.logout": true,
    "**/*.tcsh": true,
    "**/*.tcshrc": true,
    "**/*.xonshrc": true,
    "**/*.xsh": true,
    "**/*.zlogin": true,
    "**/*.zlogout": true,
    "**/*.zprofile": true,
    "**/*.zsh": true,
    "**/*.zsh-theme": true,
    "**/*.zshenv": true,
    "**/*.zshrc": true,
    "**/.env*": true,
    "**/zlogin": true,
    "**/zlogout": true,
    "**/zprofile": true,
    "**/zshenv": true,
    "**/zshrc": true,
  },
  // ============================================================
  // Arduino Settings
  // ============================================================
  "arduino.analyzeOnOpen": false,
  // ============================================================
  // Atlassian Settings
  // ============================================================
  "atlascode.bitbucket.enabled": true,
  "atlascode.jira.enabled": false,
  // ============================================================
  // AWS / Amazon Q Settings
  // ============================================================
  "amazonQ.ignoredSecurityIssues": [
    "certs",
    ".env",
    ".git"
  ],
  "amazonQ.shareContentWithAWS": false,
  "amazonQ.telemetry": false,
  "aws.telemetry": false,
  // ============================================================
  // Gemini Code Assist Settings
  // ============================================================
  "geminicodeassist.inlineSuggestions.enableAuto": true,
  // ============================================================
  // Cursor Settings
  // ============================================================
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "cursor.cpp.disabledLanguages": [
    "python",
    "plaintext",
    "ini",
    "jsonc",
    "untitled",
    "json"
  ],
  "cursor.general.gitGraphIndexing": "disabled",
  "cursor.windowSwitcher.sidebarHoverCollapsed": true,
  // ============================================================
  // Claude Code Settings
  // ============================================================
  "claudeCode.preferredLocation": "panel",
  // ============================================================
  // MSSQL Settings
  // ============================================================
  "mssql.connectionGroups": [
    {
      "id": "{{put-connection-group-id}}",
      "name": "ROOT",
    }
  ],
  "mssql.connections": [
    {
      "database": "{{put-database-name-here}}",
      "password": "",
      "server": "{{put-server-name-here}}",
      "user": "{{put-username-here}}"
    }
  ],
  // ============================================================
  // Telemetry Settings
  // ============================================================
  "redhat.telemetry.enabled": false,
  // ============================================================
  // Miscellaneous Settings
  // ============================================================
  "application.shellEnvironmentResolutionTimeout": 30,
  "vsicons.dontShowNewVersionMessage": true,
}
